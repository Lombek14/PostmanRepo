									"pm.test(\"DELETE returns 200, 204 (or 404 if already gone)\", () => {\r",
									"    const status = pm.response.code;\r",
									"\r",
									"    pm.expect([200, 204, 404]).to.include(status);\r",
									"\r",
									"    if (status === 204) {\r",
									"        console.log(\"Resource deleted successfully.\");\r",
									"        pm.environment.unset(\"userId\"); // Clear the variable if deletion succeeded\r",
									"    }\r",
									"\r",
									"    if (status === 404) {\r",
									"        console.warn(\"Resource was already deleted or never existed.\");\r",
